 width: auto;\n            height: 400px;\n            aspect-ratio: 1 / 1;\n            object-fit: cover;\n            border-radius: 10px;\n            display: block;\n        }\n    </style>\n</head>\n<body>\n    <section class=\"section\">\n        <div class=\"image-box\">\n            <img src=\"https://cdn.shopify.com/s/files/1/0781/5148/3632/files/Lucid_Origin_A_classic_vintagethemed_outdoor_photoshoot_in_fro_2.jpg?v=1764955801\" alt=\"Hero Image\">\n            <span class=\"gradient\"></span>\n            <span class=\"logo-card\"></span>\n        </div>\n        \n        <div class=\"carousel-container\">\n            <!-- Scrolling Text Overlay -->\n            <div class=\"scrolling-text-container\">\n                <div class=\"scrolling-text\">REVOX • REVOX • REVOX • REVOX • REVOX • </div>\n            </div>\n            \n            <!-- Custom Navigation Buttons -->\n            <div class=\"custom-nav-buttons\">\n                <button class=\"nav-btn nav-btn-1\" data-slide=\"0\"><span>1</span></button>\n                <button class=\"nav-btn nav-btn-2\" data-slide=\"1\"><span>2</span></button>\n                <button class=\"nav-btn nav-btn-3\" data-slide=\"2\"><span>3</span></button>\n            </div>\n            \n            <div class=\"slick-slider\">\n                <div style=\"position: relative;\"><img src=\"https://cdn.shopify.com/s/files/1/0781/5148/3632/files/0001_Image.jpg?v=1765015340\" alt=\"Slide 1\"><span><img src=\"https://cdn.shopify.com/s/files/1/0781/5148/3632/files/0002_alpha.png\"></span></div>\n                <div style=\"position: relative;\"><img src=\"https://cdn.shopify.com/s/files/1/0781/5148/3632/files/0002_Image.jpg?v=1765015339\" alt=\"Slide 2\"><span><img src=\"https://cdn.shopify.com/s/files/1/0781/5148/3632/files/0003_alpha.png\"></span></div>\n                <div style=\"position: relative;\"><img src=\"https://cdn.shopify.com/s/files/1/0781/5148/3632/files/0003_Image.jpg?v=1765015339\" alt=\"Slide 3\"><span><img src=\"https://cdn.shopify.com/s/files/1/0781/5148/3632/files/0001_alpha.png\"></span></div>\n            </div>\n        </div>\n        \n        <a class=\"btner\" href=\"https://adomantra.com/ads/RE_Mob1/Carousel.html\">KNOW MORE</a>\n    </section>\n    \n    <script>\n     jQuery(document).ready(function($) {\n    var $slider = $('.section .slick-slider');\n    var $images = $slider.find('img');\n    var imagesLoaded = 0;\n    var totalImages = $images.length;\n    \n    // Fade in the entire section after 1 sec\n    setTimeout(function() {\n        $('.section').addClass('loaded');\n    }, 1000);\n    \n    // Initialize slick\n    function initSlick() {\n        $slider.slick({\n            infinite: true,\n            speed: 600,\n            slidesToShow: 1,\n            slidesToScroll: 1,\n            autoplay: true,\n            autoplaySpeed: 3000,\n            arrows: false,\n            appendDots: $('.section .carousel-container'),\n            adaptiveHeight: false,\n            fade: false,\n            cssEase: 'ease-in-out',\n            waitForAnimate: false\n        });\n        \n        /* Custom Navigation Button Click Handlers */\n        $('.nav-btn').on('click', function() {\n            var slideIndex = $(this).data('slide');\n            $slider.slick('slickGoTo', slideIndex);\n        });\n        \n        /* Update active button state */\n        $slider.on('afterChange', function(event, slick, currentSlide) {\n            $('.nav-btn').removeClass('active');\n            $('.nav-btn[data-slide=\"' + currentSlide + '\"]').addClass('active');\n            \n            // Show and animate only the current slide overlay\n            let $span = $(slick.$slides[currentSlide]).find('span');\n            \n            // Force reflow to restart animation\n            void $span[0].offsetWidth; \n            \n            // Apply fade-in animation\n            $span.css('animation', 'fadeIn 0.8s ease-in 0.3s forwards');\n        });\n        \n        /* ANIMATION HANDLER — HIDE ALL OVERLAYS, SHOW ONLY ACTIVE */\n        $slider.on('beforeChange', function(event, slick, currentSlide, nextSlide) {\n            // Hide all overlays immediately\n            $(slick.$slides).find('span').css({\n                opacity: '0',\n                animation: 'none'\n            });\n        });\n        \n        /* INITIAL STATE: HIDE ALL OVERLAYS EXCEPT FIRST */\n        setTimeout(() => {\n            let slick = $slider.slick('getSlick');\n            \n            // Hide all spans first\n            $(slick.$slides).find('span').css({\n                opacity: '0',\n                animation: 'none'\n            });\n            \n            // Show only first slide overlay\n            let $firstSpan = $(slick.$slides[0]).find('span');\n            $firstSpan.css('animation', 'fadeIn 0.8s ease-in 0.5s forwards');\n            \n            // Set first button as active\n            $('.nav-btn[data-slide=\"0\"]').addClass('active');\n        }, 50);\n    }\n    \n    // Count loaded images\n    function imageLoaded() {\n        imagesLoaded++;\n        if (imagesLoaded === totalImages) {\n            initSlick();\n        }\n    }\n    \n    // Wait for all images\n    $images.each(function() {\n        if (this.complete) {\n            imageLoaded();\n        } else {\n            $(this).on('load', imageLoaded);\n            $(this).on('error', imageLoaded);\n        }\n    });\n    \n    // Fallback if images don't load\n    setTimeout(function() {\n        if (!$slider.hasClass('slick-initialized')) {\n            initSlick();\n        }\n    }, 3000);\n});\n\n// Mobile height adjust\nfunction applyMobileHeight() {\n    const sections = document.querySelectorAll('.section');\n    sections.forEach(sec => {\n        if (window.innerWidth <= 576) {\n            sec.style.height = window.innerHeight + \"px\";\n        } else {\n            sec.style.height = \"\";\n        }\n    });\n}