ide-item > img {\n            width: 100%;\n            height: 100%;\n            object-fit: cover;\n            display: block;\n        }\n\n        /* Video Overlay */\n        .video-overlay {\n            position: absolute;\n            top: 0;\n            left: 0;\n            width: 100%;\n            height: 100%;\n            z-index: 2;\n            opacity: 0; /* Hidden by default */\n            transition: opacity 0.8s ease-in-out;\n            pointer-events: none; /* Let clicks pass through */\n        }\n\n        .video-overlay video {\n            width: 100%;\n            height: 100%;\n            object-fit: cover;\n        }\n\n        .video-overlay.active {\n            opacity: 1;\n        }\n\n        /* --- Centered Scrolling Text --- */\n        .scrolling-container {\n            position: absolute;\n            top: 50%;\n            left: 0;\n            width: 100%;\n            transform: translateY(-50%);\n            z-index: 10;\n            pointer-events: none;\n            mix-blend-mode: overlay; /* Cool effect blending with images */\n            opacity: 0.7;\n        }\n\n        .scrolling-text {\n            font-size: 60px;\n            font-weight: 900;\n            font-style: italic;\n            white-space: nowrap;\n            text-transform: uppercase;\n            color: transparent;\n            -webkit-text-stroke: 2px rgba(255, 255, 255, 0.8); /* Outline text */\n            animation: marquee 15s linear infinite;\n        }\n\n        @keyframes marquee {\n            0% { transform: translateX(100%); }\n            100% { transform: translateX(-100%); }\n        }\n\n        /* --- iOS Glass Controls --- */\n        .custom-controls {\n            position: absolute;\n            right: 25px;\n            top: 50%;\n            transform: translateY(-50%);\n            display: flex;\n            flex-direction: column;\n            gap: 15px;\n            z-index: 20;\n        }\n\n        .control-dot 