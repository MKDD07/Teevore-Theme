  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const text = document.getElementById('teevoreText');
      const container = document.querySelector('.teevore-scroll-container');
      
      // Create particles
      for(let i=0; i<20; i++) {
        const p = document.createElement('div');
        p.className = 'particle';
        const size = Math.random() * 5 + 2;
        p.style.width = size + 'px';
        p.style.height = size + 'px';
        p.style.left = Math.random() * 100 + '%';
        p.style.top = Math.random() * 100 + '%';
        p.style.opacity = Math.random() * 0.5;
        container.appendChild(p);
      }

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            window.addEventListener('scroll', handleScroll);
          } else {
            window.removeEventListener('scroll', handleScroll);
          }
        });
      }, { threshold: 0 });
      
      if(container) observer.observe(container);

      function handleScroll() {
        if(!container || !text) return;
        
        const rect = container.getBoundingClientRect();
        const windowHeight = window.innerHeight;
        
        // Calculate how far the container is from the center of the viewport
        const containerCenter = rect.top + rect.height / 2;
        const viewportCenter = windowHeight / 2;
        const distanceFromCenter = containerCenter - viewportCenter;
        
        // Normalize distance: 0 at center, 1 at edge (roughly)
        const maxDistance = windowHeight;
        let progress = 1 - Math.abs(distanceFromCenter / maxDistance);
        progress = Math.max(0, Math.min(1, progress));
        
        // Effects
        // 1. Scale: 1x to 1.2x
        const scale = 1 + (progress * 0.2);
        
        // 2. Opacity: Fades in as it approaches center
        const opacity = 0.3 + (progress * 0.7);
        
        // 3. Color fill: Fills up as it gets closer to center
        // We use clip-path or just color transition
        
        text.style.transform = `scale(${scale}) translateY(${distanceFromCenter * 0.1}px)`;
        text.style.opacity = opacity;
        
        if (progress > 0.8) {
           text.style.color = '#fff';
           text.style.webkitTextStroke = '0px transparent';
           text.style.textShadow = '0 0 30px rgba(255,255,255,0.5)';
        } else {
           text.style.color = 'transparent';
           text.style.webkitTextStroke = '2px rgba(255,255,255,0.5)';
           text.style.textShadow = 'none';
        }
      }
    });
  </script>
