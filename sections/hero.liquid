    "class": "index-section",
    "disabled_on": {
    "groups": ["header", "footer", "custom.overlay"]
    },
    "settings": [
        {
            "type":"paragraph",
            "content":"Banner Height ==="
        },
        {
            "type": "range",
            "id": "hit",
            "label": "Desktop",
            "default":600,
            "min": 100,
            "max": 1000,
            "step": 10
        },
        {
            "type": "range",
            "id": "hitt",
            "label": "Tablet",
            "default":500,
            "min": 100,
            "max": 900,
            "step": 10
        },
        {
            "type": "range",
            "id": "hitm",
            "label": "Mobile",
            "default":400,
            "min": 100,
            "max": 900,
            "step": 10
