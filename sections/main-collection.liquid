  .collection-card-wrapper {
    position: fixed; /* Use fixed for full screen overlay effect */
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden; /* Hide scrollbars if content overflows */
    background: rgba(0, 0, 0, 0.4); /* Dim background */
    backdrop-filter: blur(15px); /* Stronger blur for full-screen */
    -webkit-backdrop-filter: blur(15px);
    z-index: 1000; /* Ensure it's on top */
    transform: translateY(100%); /* Initially off-screen */
    transition: transform 0.5s ease-out;
  }

  .collection-card-wrapper.active {
    transform: translateY(0); /* Slide into view */
  }

  .collection-card-stack {
    position: relative;
    width: min(90vw, 400px); /* Max width for the card, responsive */
    height: min(80vh, 600px); /* Max height for the card, responsive */
    display: flex;
    justify-content: center;
    align-items: center;
    transform-style: preserve-3d; /* For 3D card rotation */
    transition: transform 0.5s ease-out;
  }

  .collection-card {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 25px; /* More rounded for iOS feel */
    background: rgba(255, 255, 255, 0.9); /* Slightly less transparent */
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2), 0 10px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    display: flex;
    flex-direction: column;
    padding: 25px;
    box-sizing: border-box;
    color: #333;
    transition: transform 0.6s cubic-bezier(0.22, 0.61, 0.36, 1), opacity 0.6s ease-out, z-index 0s; /* More complex easing */
    will-change: transform, opacity;
    cursor: grab; /* Indicate draggable */
    -webkit-user-select: none; /* Prevent text selection during drag */
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    display: none; /* Hide all by default, JS will show current */
  }

  .collection-card.active-card {
    display: flex; /* Show the active card */
  }

  /* Discount Badge */
  .discount-badge {
    position: absolute;
    top: -10px; /* Slightly above the card */
