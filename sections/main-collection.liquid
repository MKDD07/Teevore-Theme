    background-color: #ff3b30; /* iOS red */
    color: white;
    padding: 8px 15px;
    border-radius: 50%; /* Circular badge */
    font-size: 0.8em;
    font-weight: bold;
    z-index: 10;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60px; /* Fixed size */
    height: 60px; /* Fixed size */
    animation: bounceIn 0.5s ease-out; /* Simple entry animation */
  }

  @keyframes bounceIn {
    0% { transform: scale(0); opacity: 0; }
    60% { transform: scale(1.1); opacity: 1; }
    100% { transform: scale(1); }
  }


  /* Card Header for Share/Favorite */
