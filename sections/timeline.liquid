{%- style -%}
  .timeline-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
    color: #ffffff;
    overflow: hidden;
    position: relative;
  }

  .timeline-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 80%, {{ section.settings.accent_color | color_modify: 'alpha', 0.1 }} 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, {{ section.settings.accent_color | color_modify: 'alpha', 0.15 }} 0%, transparent 50%);
    pointer-events: none;
  }

  .timeline-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  .timeline-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .timeline-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 20px;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .timeline-title .highlight {
    color: {{ section.settings.accent_color }};
  }

  .timeline-subtitle {
    font-size: 1.2rem;
    color: #94a3b8;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .timeline-swiper {
    position: relative;
    margin-bottom: 60px;
  }

  .timeline-slide {
    height: auto;
    display: flex;
    justify-content: center;
    padding: 0 15px;
  }

  .timeline-item {
    background: rgba(30, 41, 59, 0.8);
    border: 1px solid rgba(71, 85, 105, 0.3);
    border-radius: 20px;
    padding: 0;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
    max-width: 400px;
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .timeline-item:hover {
    transform: translateY(-12px);
    border-color: {{ section.settings.accent_color }};
    box-shadow: 0 20px 60px rgba(0,0,0,0.4);
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, {{ section.settings.accent_color | color_modify: 'alpha', 0.1 }}, transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .timeline-item:hover::before {
    opacity: 1;
  }

  .timeline-image {
    position: relative;
    height: 250px;
    overflow: hidden;
    background: #1e293b;
  }

  .timeline-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    filter: grayscale(20%) contrast(1.1);
  }

  .timeline-item:hover .timeline-image img {
    transform: scale(1.05);
  }

  .timeline-year {
    position: absolute;
    top: 20px;
    right: 20px;
    background: linear-gradient(135deg, {{ section.settings.accent_color }}, {{ section.settings.accent_color | color_modify: 'brightness', 1.3 }});
    color: white;
    padding: 8px 16px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.1rem;
    z-index: 2;
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  }

  .timeline-content {
    padding: 30px;
  }

  .timeline-event-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .timeline-subtitle-text {
    font-size: 0.95rem;
    color: {{ section.settings.accent_color }};
    font-weight: 600;
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .timeline-description {
    color: #cbd5e1;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .timeline-description ul {
    list-style: none;
    padding: 0;
    margin: 12px 0 0 0;
  }

  .timeline-description li {
    position: relative;
    padding-left: 16px;
    margin-bottom: 6px;
  }

  .timeline-description li::before {
    content: 'â€¢';
    color: {{ section.settings.accent_color }};
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  /* Timeline Bottom Navigation */
  .timeline-bottom {
    position: relative;
    margin-top: 60px;
  }

  .timeline-track {
    position: relative;
    height: 4px;
    background: rgba(71, 85, 105, 0.3);
    border-radius: 2px;
    margin: 40px 0;
  }

  .timeline-progress {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background: linear-gradient(90deg, {{ section.settings.accent_color }}, {{ section.settings.accent_color | color_modify: 'brightness', 1.2 }});
    border-radius: 2px;
    transition: width 0.6s ease;
    width: 33%;
  }

  .timeline-dots {
    display: flex;
    justify-content: space-between;
    position: relative;
    margin-top: -8px;
  }

  .timeline-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: rgba(71, 85, 105, 0.5);
    border: 3px solid #1e293b;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .timeline-dot.active {
    background: {{ section.settings.accent_color }};
    transform: scale(1.3);
    box-shadow: 0 0 20px {{ section.settings.accent_color | color_modify: 'alpha', 0.5 }};
  }

  .timeline-dot-label {
    position: absolute;
    bottom: -35px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.8rem;
    color: #94a3b8;
    font-weight: 600;
    white-space: nowrap;
  }

  .timeline-dot.active .timeline-dot-label {
    color: #ffffff;
  }

  /* Swiper Navigation */
  .timeline-navigation {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
    margin-top: 50px;
  }

  .swiper-button-prev,
  .swiper-button-next {
    position: static;
    width: 60px;
    height: 60px;
    background: rgba(30, 41, 59, 0.8);
    border: 1px solid rgba(71, 85, 105, 0.5);
    border-radius: 50%;
    color: #ffffff;
    transition: all 0.4s ease;
    backdrop-filter: blur(10px);
  }

  .swiper-button-prev:hover,
  .swiper-button-next:hover {
    background: {{ section.settings.accent_color }};
    border-color: {{ section.settings.accent_color }};
    transform: scale(1.1);
    box-shadow: 0 8px 30px {{ section.settings.accent_color | color_modify: 'alpha', 0.4 }};
  }

  .swiper-button-prev::after,
  .swiper-button-next::after {
    font-size: 18px;
    font-weight: 700;
  }

  .swiper-pagination {
    position: static;
  }

  .swiper-pagination-bullet {
    width: 12px;
    height: 12px;
    background: rgba(71, 85, 105, 0.5);
    border-radius: 50%;
    transition: all 0.3s ease;
    margin: 0 6px;
  }

  .swiper-pagination-bullet-active {
    background: {{ section.settings.accent_color }};
    transform: scale(1.4);
    box-shadow: 0 0 15px {{ section.settings.accent_color | color_modify: 'alpha', 0.6 }};
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .timeline-item {
      max-width: 360px;
    }
    
    .timeline-image {
      height: 220px;
    }
    
    .timeline-content {
      padding: 25px;
    }
  }

  @media (max-width: 768px) {
    .timeline-section {
      padding: {{ section.settings.padding_top | divided_by: 2 }}px 0 {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }
    
    .timeline-container {
      padding: 0 16px;
    }
    
    .timeline-header {
      margin-bottom: 50px;
    }
    
    .timeline-item {
      max-width: 320px;
    }
    
    .timeline-image {
      height: 200px;
    }
    
    .timeline-content {
      padding: 20px;
    }
    
    .timeline-event-title {
      font-size: 1.2rem;
    }
    
    .timeline-dots {
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }
    
    .timeline-navigation {
      gap: 20px;
      margin-top: 40px;
    }
    
    .swiper-button-prev,
    .swiper-button-next {
      width: 50px;
      height: 50px;
    }
  }

  @media (max-width: 480px) {
    .timeline-item {
      max-width: 290px;
    }
    
    .timeline-image {
      height: 180px;
    }
    
    .timeline-year {
      font-size: 0.9rem;
      padding: 6px 12px;
    }
  }
{%- endstyle -%}

<div class="timeline-section">
  <div class="timeline-container">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="timeline-header">
        {% if section.settings.title != blank %}
          <h2 class="timeline-title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="timeline-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="timeline-swiper swiper">
      <div class="timeline-wrapper swiper-wrapper">
        {% for block in section.blocks %}
          <div class="timeline-slide swiper-slide" {{ block.shopify_attributes }}>
            <div class="timeline-item">
              {% if block.settings.image != blank %}
                <div class="timeline-image">
                  {% if block.settings.year != blank %}
                    <div class="timeline-year">{{ block.settings.year }}</div>
                  {% endif %}
                  <img src="{{ block.settings.image | image_url: width: 400, height: 250, crop: 'center' }}" 
                       alt="{{ block.settings.title | escape }}"
                       loading="lazy">
                </div>
              {% endif %}
              
              <div class="timeline-content">
                {% if block.settings.subtitle != blank %}
                  <div class="timeline-subtitle-text">{{ block.settings.subtitle }}</div>
                {% endif %}
                {% if block.settings.title != blank %}
                  <h3 class="timeline-event-title">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.description != blank %}
                  <div class="timeline-description">{{ block.settings.description }}</div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- Timeline Bottom Track -->
    <div class="timeline-bottom">
      <div class="timeline-track">
        <div class="timeline-progress" id="timeline-progress"></div>
      </div>
      <div class="timeline-dots" id="timeline-dots">
        {% for block in section.blocks %}
          <div class="timeline-dot{% if forloop.first %} active{% endif %}" data-slide="{{ forloop.index0 }}">
            <div class="timeline-dot-label">{{ block.settings.year | default: forloop.index }}</div>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="timeline-navigation">
      <div class="swiper-button-prev"></div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const timelineSwiper = new Swiper('.timeline-swiper', {
    slidesPerView: 1,
    spaceBetween: 30,
    loop: {{ section.blocks.size | greater_than: 3 }},
    centeredSlides: true,
    grabCursor: true,
    
    breakpoints: {
      768: {
        slidesPerView: 2,
        spaceBetween: 40,
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 50,
      }
    },
    
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
      dynamicBullets: true,
    },
    
    autoplay: {
      delay: {{ section.settings.autoplay_delay | times: 1000 }},
      disableOnInteraction: false,
      pauseOnMouseEnter: true,
    },
    
    effect: 'slide',
    speed: 800,
    
    on: {
      init: function() {
        updateTimelineProgress(this);
      },
      
      slideChange: function() {
        updateTimelineProgress(this);
      }
    }
  });
  
  // Timeline dots functionality
  const timelineDots = document.querySelectorAll('.timeline-dot');
  const timelineProgress = document.getElementById('timeline-progress');
  
  timelineDots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      timelineSwiper.slideTo(index);
    });
  });
  
  function updateTimelineProgress(swiper) {
    const activeIndex = swiper.realIndex || swiper.activeIndex;
    const totalSlides = swiper.slides.length;
    const progressPercent = ((activeIndex + 1) / totalSlides) * 100;
    
    // Update progress bar
    if (timelineProgress) {
      timelineProgress.style.width = progressPercent + '%';
    }
    
    // Update active dot
    timelineDots.forEach((dot, index) => {
      if (index === activeIndex) {
        dot.classList.add('active');
      } else {
        dot.classList.remove('active');
      }
    });
  }
  
  // Pause autoplay on hover
  const swiperContainer = document.querySelector('.timeline-swiper');
  if (swiperContainer) {
    swiperContainer.addEventListener('mouseenter', () => {
      timelineSwiper.autoplay.stop();
    });
    
    swiperContainer.addEventListener('mouseleave', () => {
      timelineSwiper.autoplay.start();
    });
  }
});
</script>

