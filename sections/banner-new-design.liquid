{% schema %}
{
  "name": "Hero Collection Slider",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Button/Accent Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "collection_slide",
      "name": "Collection Slide",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom Image (Optional)",
          "info": "Overrides the collection's featured image"
        },
        {
          "type": "text",
          "id": "pre_heading",
          "label": "Small Top Heading",
          "default": "Featured Collection"
        },
        {
          "type": "text",
          "id": "custom_title",
          "label": "Custom Headline (Optional)",
          "info": "Leave blank to use Collection Title"
        },
        {
          "type": "textarea",
          "id": "custom_description",
          "label": "Custom Description (Optional)",
          "info": "Leave blank to use Collection Description (truncated)"
        },
        {
          "type": "range",
          "id": "desc_word_limit",
          "min": 10,
          "max": 100,
          "step": 5,
          "label": "Description Word Limit",
          "default": 25
        },
        {
          "type": "header",
          "content": "Bottom Navigation Content"
        },
        {
          "type": "text",
          "id": "nav_title",
          "label": "Nav Title (Optional)",
          "info": "Leave blank to use Collection Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Collection Slider",
      "blocks": [
        { "type": "collection_slide" },
        { "type": "collection_slide" },
        { "type": "collection_slide" }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  .hns-wrapper {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    font-family: inherit; /* Inherit theme font */
    overflow: hidden;
    position: relative;
  }

  .hns-container {
    display: flex;
    flex-direction: column;
    min-height: 600px;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* --- Main Content Area --- */
  .hns-main {
    display: flex;
    flex: 1;
    position: relative;
    opacity: 0;
    transition: opacity 0.5s ease;
    display: none; /* Hidden by default */
  }

  .hns-main.active {
    display: flex;
    opacity: 1;
  }

  .hns-content-col {
    flex: 1;
    padding: 40px 5%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    z-index: 2;
  }

  .hns-image-col {
    flex: 0.5;
    position: relative;
    overflow: hidden;
  }
  @media (max-width: 576px)
  {
  .hns-image-col {
    flex: 1.2;
  }
}
  .hns-image-col img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }
  /* --- Sidebar "Next Up" Overlay --- */
  .hns-sidebar {
    position: absolute;
    right: 0;
    bottom: 20px;
    width: 200px;
    background: rgba(0,0,0,0.6);
    padding: 15px;
    backdrop-filter: blur(5px);
    color: #fff;
    display: none;
  }
  @media(min-width: 990px) { .hns-sidebar { display: block; } }

  .hns-sidebar small { font-size: 10px; text-transform: uppercase; letter-spacing: 1px; display: block; margin-bottom: 5px;}
  .hns-sidebar strong { font-size: 14px; }

  /* --- Bottom Navigation --- */
  .hns-nav-bar {
    display: flex;
    border-top: 1px solid rgba(255,255,255,0.2);
    background: {{ section.settings.bg_color }};
    z-index: 10;
  }

  .hns-nav-item {
    flex: 1;
    padding: 20px 20px 30px 20px;
    cursor: pointer;
    border-top: 3px solid transparent;
    transition: all 0.3s ease;
    opacity: 0.5;
  }

  .hns-nav-item:hover {
    opacity: 0.8;
  }

  .hns-nav-item.active {
    opacity: 1;
    border-top: 3px solid {{ section.settings.text_color }};
  }

  .hns-nav-cat {
    display: block;
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 5px;
    color: #888;
  }
  .hns-nav-item.active .hns-nav-cat { color: #ccc; }

  .hns-nav-title {
    display: block;
    font-size: 14px;
    font-weight: 700;
    line-height: 1.3;
  }

  /* --- Responsive --- */
  @media (max-width: 768px) {
    .hns-main.active {
      flex-direction: column-reverse;
    }
    .hns-image-col {
      height: 300px;
      flex: none;
    }
    .hns-title {
      font-size: 28px;
    }
    .hns-desc {
      font-size: 16px;
    }
    .hns-nav-bar {
      overflow-x: auto;
      white-space: nowrap;
    }
    .hns-nav-item {
      min-width: 220px;
      white-space: normal;
    }
  }
{% endstyle %}

<div class="hns-wrapper">
  <div class="hns-container">
    
    <!-- Loop through blocks -->
    {% for block in section.blocks %}
      {% assign selected_collection = collections[block.settings.collection] %}
      
      <!-- Logic Variables -->
      {% assign final_title = block.settings.custom_title | default: selected_collection.title | default: "Select a Collection" %}
      
      {% assign desc_content = selected_collection.description | strip_html | truncatewords: block.settings.desc_word_limit %}
      {% assign final_desc = block.settings.custom_description | default: desc_content %}
      
      {% assign final_image = block.settings.custom_image | default: selected_collection.image | default: selected_collection.featured_image %}
      
      {% assign final_link = selected_collection.url | default: "#" %}
      
      <div class="hns-main {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        
        <div class="hns-content-col">
          {% if block.settings.pre_heading != blank %}
            <div class="hns-pre-heading">{{ block.settings.pre_heading }}</div>
          {% endif %}
          
          <h2 class="hns-title kug"style="color: white;">{{ final_title }}</h2>
          
          {% if final_desc != blank %}
            <div class="hns-desc">{{ final_desc }}</div>
          {% endif %}
          
          <a href="{{ final_link }}" class="btn btn-sm btn5 mt30"style="max-width: 200px;">
            {% if block.settings.collection != blank %}
              Shop Collection
            {% else %}
              Read more
            {% endif %}
          </a>
        </div>

        <div class="hns-image-col">
          {% if final_image != blank %}
            {{ final_image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
          {% else %}
            <!-- Placeholder if no collection or image selected -->
            {{ 'collection-1' | placeholder_svg_tag }}
          {% endif %}
          
          <div class="hns-sidebar"><small>Next</small>
            <strong>
              {% assign next_index = forloop.index0 | plus: 1 %}
              {% if section.blocks[next_index] %}
                 {% assign next_coll = collections[section.blocks[next_index].settings.collection] %}
                 {{ section.blocks[next_index].settings.custom_title | default: next_coll.title | default: "Next Collection" }}
              {% else %}
                 {% assign first_coll = collections[section.blocks[0].settings.collection] %}
                 {{ section.blocks[0].settings.custom_title | default: first_coll.title | default: "Start" }}
              {% endif %}
            </strong>
          </div>
        </div>

      </div>
    {% endfor %}

    <!-- Bottom Navigation Bar -->
    <div class="hns-nav-bar">
      {% for block in section.blocks %}
        {% assign selected_collection = collections[block.settings.collection] %}
        {% assign nav_title_text = block.settings.nav_title | default: selected_collection.title | default: "Collection" %}
        
        <div class="hns-nav-item {% if forloop.first %}active{% endif %}" data-target="{{ forloop.index0 }}">
          <span class="hns-nav-title">{{ nav_title_text }}</span>
        </div>
      {% endfor %}
    </div>

  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const wrapper = document.querySelector('.hns-wrapper');
    if(!wrapper) return;

    const navItems = wrapper.querySelectorAll('.hns-nav-item');
    const slides = wrapper.querySelectorAll('.hns-main');

    // Function to switch slides
    function switchSlide(targetIndex) {
       // Remove active class from all navs and slides
       navItems.forEach(n => n.classList.remove('active'));
       slides.forEach(s => s.classList.remove('active'));

       // Add active class to target nav
       if(navItems[targetIndex]) navItems[targetIndex].classList.add('active');

       // Show corresponding slide
       const targetSlide = wrapper.querySelector(`.hns-main[data-index="${targetIndex}"]`);
       if(targetSlide) targetSlide.classList.add('active');
    }

    // Click Event
    navItems.forEach(item => {
      item.addEventListener('click', function() {
        const targetIndex = this.getAttribute('data-target');
        switchSlide(targetIndex);
      });
    });
  });
</script>