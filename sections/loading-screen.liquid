{%- liquid
  assign show_loading = false
  if template == 'index'
    assign show_loading = true
  endif
-%}
{% assign st = 'section.settings' %}
{% if show_loading %}
<!-- Inline CSS to prevent FOUC and glitch effect -->
<style>
  .loading-overlay-instant {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100% !important;
    height: 100% !important;
    background: {{ st.background_color }} !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    z-index: 99999 !important;
    opacity: 1 !important;
    visibility: visible !important;
  }
  
  body.loading-active {
    overflow: hidden !important;
  }
</style>

<!-- Immediate script to prevent glitch -->
<script>
  // Add loading class immediately
  document.documentElement.classList.add('loading-active');
  document.body.classList.add('loading-active');
</script>

<div id="loading-screen" class="loading-overlay loading-overlay-instant">
  <div class="loading-content">
    <div class="loading-logo">
      <svg width="{{ st.logo_size }}" height="{{ st.logo_size }}" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        
        <!-- Outer Ring with Animated Dashes -->
        <circle
          cx="100"
          cy="100"
          r="{{ st.outer_radius }}"
          fill="none"
          stroke="{{ st.outer_stroke_color }}"
          stroke-width="{{ st.outer_stroke_width }}"
          stroke-dasharray="{{ st.dash_length }} {{ st.dash_gap }}"
          stroke-dashoffset="0"
          class="outer-rotating-circle"
          stroke-linecap="round"
        />
        
        <!-- Middle Ring with Different Dash Pattern -->
        <circle
          cx="100"
          cy="100"
          r="{{ st.middle_radius }}"
          fill="none"
          stroke="{{ st.middle_stroke_color }}"
          stroke-width="{{ st.middle_stroke_width }}"
          stroke-dasharray="{{ st.middle_dash_length }} {{ st.middle_dash_gap }}"
          stroke-dashoffset="0"
          class="middle-rotating-circle"
          stroke-linecap="round"
        />
        
        <!-- Inner Glowing Circle -->
        <circle
          cx="100"
          cy="100"
          r="{{ st.inner_radius }}"
          fill="none"
          stroke="{{ st.inner_stroke_color }}"
          stroke-width="{{ st.inner_stroke_width }}"
          class="inner-glowing-circle"
          stroke-linecap="round"
        />
        
        <!-- Custom SVG Logo Container - Replace this group with your logo -->
        <g class="custom-logo-container" transform="translate(100, 100)">
          <!-- Placeholder Logo - Replace with your custom SVG -->
          <g class="placeholder-logo">
            <!-- This is just a placeholder - replace with your actual logo SVG -->
            <circle cx="0" cy="0" r="25" fill="none" stroke="{{ st.logo_stroke_color }}" stroke-width="2" opacity="0.8"/>
            <text x="0" y="0" text-anchor="middle" dominant-baseline="central" 
                  font-family="Arial, sans-serif" 
                  font-size="12" 
                  fill="{{ st.logo_text_color }}">LOGO</text>
          </g>
        </g>
        
        <!-- Animated Particles -->
        {% for i in (1..st.particle_count) %}
        {% assign angle = i | times: 360 | divided_by: st.particle_count %}
        {% assign x = 100 | plus: st.particle_radius | times: angle | cos %}
        {% assign y = 100 | plus: st.particle_radius | times: angle | sin %}
        <circle 
          cx="{{ x }}" 
          cy="{{ y }}" 
          r="{{ st.particle_size }}" 
          fill="{{ st.particle_color }}" 
          class="animated-particle particle-{{ forloop.index }}"
          style="animation-delay: {{ forloop.index0 | times: 0.2 }}s;"
        />
        {% endfor %}
      </svg>
    </div>
    
    {% if st.show_loading_text %}
    <div class="loading-text">
      <h2 class="loading-title">{{ st.loading_title }}</h2>
      <p class="loading-subtitle">{{ st.loading_subtitle }}</p>
      
      <!-- Progress Bar -->
      {% if st.show_progress_bar %}
      <div class="progress-container">
        <div class="progress-bar">
          <div class="progress-fill"></div>
        </div>
        <span class="progress-text">0%</span>
      </div>
      {% endif %}
      
      <!-- Animated Dots -->
      {% if st.show_dots %}
      <div class="loading-dots">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
      </div>
      {% endif %}
    </div>
    {% endif %}
  </div>
</div>

<style>
  .loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ st.background_color }};
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 99999;
    transition: opacity {{ st.fade_duration }}s ease-out, transform {{ st.fade_duration }}s ease-out;
    opacity: 1;
    visibility: visible;
  }
  
  .loading-overlay.fade-out {
    opacity: 0;
    transform: scale(1.1);
    pointer-events: none;
  }
  
  .loading-content {
    text-align: center;
    animation: contentPulse {{ st.content_pulse_duration }}s ease-in-out infinite alternate;
  }
  
  .loading-logo svg {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 4px 8px rgba(0,0,0,0.1));
  }
  
  /* Outer Circle - Clockwise Rotation */
  .outer-rotating-circle {
    transform-origin: center;
    animation: rotateClockwise {{ st.outer_rotation_speed }}s linear infinite;
    filter: drop-shadow(0 0 {{ st.outer_glow_size }}px {{ st.outer_stroke_color }});
  }
  
  /* Middle Circle - Counter-clockwise Rotation */
  .middle-rotating-circle {
    transform-origin: center;
    animation: rotateCounterClockwise {{ st.middle_rotation_speed }}s linear infinite;
    filter: drop-shadow(0 0 {{ st.middle_glow_size }}px {{ st.middle_stroke_color }});
  }
  
  /* Inner Glowing Circle */
  .inner-glowing-circle {
    animation: innerGlow {{ st.inner_glow_speed }}s ease-in-out infinite alternate;
    filter: drop-shadow(0 0 {{ st.inner_glow_size }}px {{ st.inner_stroke_color }});
  }
  
  /* Custom Logo Container */
  .custom-logo-container {
    animation: logoFloat {{ st.logo_float_speed }}s ease-in-out infinite alternate;
  }
  
  .placeholder-logo {
    animation: logoScale {{ st.logo_scale_speed }}s ease-in-out infinite alternate;
  }
  
  /* Animated Particles */
  .animated-particle {
    animation: particleFloat {{ st.particle_animation_speed }}s ease-in-out infinite;
    transform-origin: 100px 100px;
  }
  
  /* Loading Text Styles */
  .loading-text {
    margin-top: {{ st.text_margin_top }}px;
    color: {{ st.text_color }};
  }
  
  .loading-title {
    font-size: {{ st.title_size }}px;
    font-weight: {{ st.title_weight }};
    margin: 0 0 10px 0;
    animation: textGlow {{ st.text_glow_speed }}s ease-in-out infinite alternate;
  }
  
  .loading-subtitle {
    font-size: {{ st.subtitle_size }}px;
    font-weight: {{ st.subtitle_weight }};
    margin: 0 0 20px 0;
    opacity: 0.8;
  }
  
  /* Progress Bar */
  .progress-container {
    margin: 20px 0;
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .progress-bar {
    flex: 1;
    height: {{ st.progress_bar_height }}px;
    background: {{ st.progress_bg_color }};
    border-radius: {{ st.progress_bar_height | divided_by: 2 }}px;
    overflow: hidden;
    position: relative;
  }
  
  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, {{ st.progress_color }}, {{ st.progress_color_end }});
    width: 0%;
    animation: progressFill {{ st.progress_duration }}s ease-out forwards;
    border-radius: inherit;
  }
  
  .progress-text {
    font-size: {{ st.progress_text_size }}px;
    font-weight: 600;
    min-width: 35px;
    color: {{ st.progress_text_color }};
  }
  
  /* Loading Dots */
  .loading-dots {
    display: flex;
    justify-content: center;
    gap: {{ st.dot_spacing }}px;
    margin-top: 15px;
  }
  
  .loading-dots .dot {
    width: {{ st.dot_size }}px;
    height: {{ st.dot_size }}px;
    background: {{ st.dot_color }};
    border-radius: 50%;
    animation: dotBounce {{ st.dot_animation_speed }}s ease-in-out infinite;
  }
  
  .loading-dots .dot:nth-child(1) { animation-delay: 0s; }
  .loading-dots .dot:nth-child(2) { animation-delay: 0.2s; }
  .loading-dots .dot:nth-child(3) { animation-delay: 0.4s; }
  
  /* Keyframe Animations */
  @keyframes rotateClockwise {
    0% { 
      transform: rotate(0deg);
      stroke-dashoffset: 0;
    }
    100% { 
      transform: rotate(360deg);
      stroke-dashoffset: -{{ st.dash_length | plus: st.dash_gap }};
    }
  }
  
  @keyframes rotateCounterClockwise {
    0% { 
      transform: rotate(0deg);
      stroke-dashoffset: 0;
    }
    100% { 
      transform: rotate(-360deg);
      stroke-dashoffset: {{ st.middle_dash_length | plus: st.middle_dash_gap }};
    }
  }
  
  @keyframes innerGlow {
    0% {
      stroke-opacity: 0.4;
      filter: drop-shadow(0 0 {{ st.inner_glow_size }}px {{ st.inner_stroke_color }});
    }
    100% {
      stroke-opacity: 1;
      filter: drop-shadow(0 0 {{ st.inner_glow_size | times: 2 }}px {{ st.inner_stroke_color }});
    }
  }
  
  @keyframes contentPulse {
    0% { transform: scale(1); }
    100% { transform: scale(1.02); }
  }
  
  @keyframes logoFloat {
    0% { transform: translate(0, 0px) scale(1); }
    100% { transform: translate(0, -3px) scale(1.05); }
  }
  
  @keyframes logoScale {
    0% { transform: scale(1); opacity: 0.8; }
    100% { transform: scale(1.1); opacity: 1; }
  }
  
  @keyframes particleFloat {
    0%, 100% { 
      transform: rotate(0deg) translateX({{ st.particle_radius }}px) rotate(0deg);
      opacity: 0.3;
    }
    50% { 
      transform: rotate(180deg) translateX({{ st.particle_radius | plus: 10 }}px) rotate(-180deg);
      opacity: 1;
    }
  }
  
  @keyframes textGlow {
    0% { text-shadow: 0 0 5px rgba({{ st.text_color | remove: '#' | split: '' | join: ',' }}, 0.3); }
    100% { text-shadow: 0 0 15px rgba({{ st.text_color | remove: '#' | split: '' | join: ',' }}, 0.6); }
  }
  
  @keyframes progressFill {
    0% { width: 0%; }
    100% { width: 100%; }
  }
  
  @keyframes dotBounce {
    0%, 100% { 
      transform: translateY(0px) scale(1);
      opacity: 0.5;
    }
    50% { 
      transform: translateY(-10px) scale(1.2);
      opacity: 1;
    }
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .loading-logo svg {
      width: {{ st.mobile_logo_size }}px !important;
      height: {{ st.mobile_logo_size }}px !important;
    }
    
    .loading-title {
      font-size: {{ st.mobile_title_size }}px !important;
    }
    
    .loading-subtitle {
      font-size: {{ st.mobile_subtitle_size }}px !important;
    }
  }
  
  @media (max-width: 480px) {
    .loading-content {
      padding: 20px;
    }
  }
</style>

<script>
  (function() {
    'use strict';
    
    const loadingScreen = document.getElementById('loading-screen');
    const minDisplayTime = {{ st.min_display_time }} * 1000;
    const maxDisplayTime = {{ st.max_display_time }} * 1000;
    const startTime = performance.now();
    
    let progressInterval;
    let isHidden = false;
    
    // Progress bar animation
    {% if st.show_progress_bar %}
    const progressText = document.querySelector('.progress-text');
    if (progressText) {
      let progress = 0;
      progressInterval = setInterval(() => {
        if (progress < 100 && !isHidden) {
          progress += Math.random() * 3;
          if (progress > 100) progress = 100;
          progressText.textContent = Math.round(progress) + '%';
        }
      }, 50);
    }
    {% endif %}
    
    // Function to hide loading screen
    function hideLoadingScreen() {
      if (isHidden) return;
      isHidden = true;
      
      const elapsedTime = performance.now() - startTime;
      const remainingTime = Math.max(0, minDisplayTime - elapsedTime);
      
      if (progressInterval) {
        clearInterval(progressInterval);
      }
      
      // Complete progress bar instantly
      {% if st.show_progress_bar %}
      const progressText = document.querySelector('.progress-text');
      if (progressText) progressText.textContent = '100%';
      {% endif %}
      
      setTimeout(() => {
        loadingScreen.classList.add('fade-out');
        
        setTimeout(() => {
          if (loadingScreen && loadingScreen.parentNode) {
            loadingScreen.remove();
          }
          // Re-enable scrolling
          document.documentElement.classList.remove('loading-active');
          document.body.classList.remove('loading-active');
          document.body.style.overflow = '';
        }, {{ st.fade_duration }} * 1000);
      }, remainingTime);
    }
    
    // Check if page is already loaded
    if (document.readyState === 'complete') {
      hideLoadingScreen();
    } else {
      // Wait for page load
      window.addEventListener('load', hideLoadingScreen);
    }
    
    // Fallback timeout
    setTimeout(() => {
      hideLoadingScreen();
    }, maxDisplayTime);
    
    // Handle page visibility changes
    document.addEventListener('visibilitychange', () => {
      if (document.visibilityState === 'visible' && document.readyState === 'complete') {
        hideLoadingScreen();
      }
    });
    
  })();
</script>
