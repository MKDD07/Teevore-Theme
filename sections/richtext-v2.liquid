{%- capture richtext -%}
{% assign section_st = section.settings %}
{% style %}
.richtext-container {
display: grid;
gap: {{section_st.gap_direction | default: 2 }}rem;
{% if section_st.grid_columns == 1 %}
grid-template-columns: 1fr;
{% elsif section_st.grid_columns == 2 %}
grid-template-columns: repeat(2, 1fr);
{% elsif section_st.grid_columns == 3 %}
grid-template-columns: repeat(3, 1fr);
{% elsif section_st.grid_columns == 4 %}
grid-template-columns: repeat(4, 1fr);
{% endif %}
{% if section_st.grid_rows == 1 %}
grid-template-rows: 1fr;
{% elsif section_st.grid_rows == 2 %}
grid-template-rows: repeat(2, auto);
{% elsif section_st.grid_rows == 3 %}
grid-template-rows: repeat(3, auto);
{% elsif section_st.grid_rows == 4 %}
grid-template-rows: repeat(4, auto);
{% endif %}
align-items: {{ section.settings.align_items }};
}
.richtext-column {
max-width: {{section_st.max_width}}px;
}
.grid-item {
{% if section_st.grid_columns == 1 %}width: 100%;{% endif %}
{% if section_st.grid_columns == 2 %}width: 50%;{% endif %}
{% if section_st.grid_columns == 3 %}width: 33.333%;{% endif %}
{% if section_st.grid_columns == 4 %}width: 25%;{% endif %}
}
@media (max-width: 768px) {
.richtext-container {
grid-template-columns: 1fr;
gap: 1rem;
}
.grid-item {
width: 100%;
}
}
{% unless request.path contains '/collections/women' or template contains  'girls_collections' %}
  {% if section.settings.italic_fancy_font %}
    {% capture italic_font %}
      {% if section.settings.italic_font_selection == 'primary' %}
        font-family: '{{ settings.font_face_family }}';
      {% elsif section.settings.italic_font_selection == 'alternative' %}
        font-family: '{{ settings.font_face_family_alternative }}';
      {% elsif section.settings.italic_font_selection == 'secondary' %}
        font-family: '{{ settings.font_face_family_sec }}';
      {% endif %}
    {% endcapture %}

    .rgTxt em,
    .rgTxt i {
      {{ italic_font | strip }}
      {% if section.settings.italic_outline %}
        -webkit-text-stroke: 1px currentColor;
        -webkit-text-fill-color: transparent;
        font-style: normal;
      {% endif %}
    }
  {% endif %}
{% else %}
  .rgTxt em,
  .rgTxt i {
    font-family: '{{ settings.font_face_family_alternative }}';
    -webkit-text-stroke: 0;
    -webkit-text-fill-color: initial;
    font-style: italic;
  }
{% endunless %}

.btn-container {
display: flex;
{% unless section_st.lefta %}
justify-content: center;
{% endunless %}
}
.richtext-column .btn-container {
{% if section_st.lefta %}
justify-content: flex-start;
{% else %}
justify-content: center;
{% endif %}
}
{% if section_st.show_column_bg %}
.richtext-column {
background: rgba(0,0,0,0.02);
padding: 1.5rem;
border-radius: 8px;
}
{% endif %}
.has-left-border {
border-left: {{ section.settings.border_thickness }}px solid {{ section.settings.border_color }};
}
.grid-pos-1 { grid-column: 1; grid-row: 1; }
.grid-pos-2 { grid-column: 2; grid-row: 1; }
.grid-pos-3 { grid-column: 3; grid-row: 1; }
.grid-pos-4 { grid-column: 4; grid-row: 1; }
.grid-pos-5 { grid-column: 1; grid-row: 2; }
.grid-pos-6 { grid-column: 2; grid-row: 2; }
.grid-pos-7 { grid-column: 3; grid-row: 2; }
.grid-pos-8 { grid-column: 4; grid-row: 2; }
.grid-pos-9 { grid-column: 1; grid-row: 3; }
.grid-pos-10 { grid-column: 2; grid-row: 3; }
.grid-pos-11 { grid-column: 3; grid-row: 3; }
.grid-pos-12 { grid-column: 4; grid-row: 3; }
.grid-pos-13 { grid-column: 1; grid-row: 4; }
.grid-pos-14 { grid-column: 2; grid-row: 4; }
.grid-pos-15 { grid-column: 3; grid-row: 4; }
.grid-pos-16 { grid-column: 4; grid-row: 4; }
.grid-align-left { justify-self: start; }
.grid-align-center { justify-self: center; }
.grid-align-right { justify-self: end; }
@media (max-width: 768px) {
.has-left-border {
border-left: none;
}
.grid-pos-1, .grid-pos-2, .grid-pos-3, .grid-pos-4, .grid-pos-5, .grid-pos-6, .grid-pos-7, .grid-pos-8, .grid-pos-9, .grid-pos-10, .grid-pos-11, .grid-pos-12, .grid-pos-13, .grid-pos-14, .grid-pos-15, .grid-pos-16 {
grid-column: 1 !important;
grid-row: auto !important;
}
}
