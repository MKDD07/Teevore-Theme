<!-- sections/discount-card.liquid -->
<style>
  .discount-card-container {
    display: flex;
    width: 100%;
    margin: 40px auto;
    justify-content: center;
    align-items: center;
  }

  .discount-card {
    display: flex;
    width: 100%;
    align-items: center;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .gift-first {
    position: relative;
    width: 30%;
    height: -webkit-fill-available;
    background: linear-gradient(135deg, #FF8FAB 0%, #FF6B94 100%);
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .gift-icon {
    position: relative;
    z-index: 3;
    transform: rotate(21.795deg);
  }

  .blur-circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.25);
    filter: blur(2px);
    animation: float 3s ease-in-out infinite;
  }

  .blur-circle-1 {
    width: 130px;
    height: 130px;
    top: 10px;
    left: 50px;
    animation-delay: 0s;
  }

  .blur-circle-2 {
    width: 130px;
    height: 130px;
    top: -20px;
    right: 20px;
    animation-delay: 1.5s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) scale(1);
    }
    25% {
      transform: translateY(-10px) scale(1.05);
    }
    50% {
      transform: translateY(-25px) scale(1.02);
    }
    75% {
      transform: translateY(-45px) scale(1.08);
    }
  }

  .gift-second {
    display: flex;
    padding: 30px 50px;
    align-items: center;
    gap: 30px;
    flex: 1;
    background: var(--bgl);
    min-height: 155px;
  }

  .gift-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .gift-text {
    color: #d5f365;
    font-size: {{ section.settings.main_text_size }}px;
    font-weight: {{ section.settings.main_text_weight }};
    line-height: 1.1;
    margin: 0;
  }

  .gift-subtext {
    color: #FFF;
    font-family: var(--font-body-family);
    font-size: {{ section.settings.sub_text_size }}px;
    font-weight: {{ section.settings.sub_text_weight }};
    line-height: 1.2;
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .discount-card-container {
      padding: 40px 15px;
    }

    .gift-second {
      padding: 20px 30px;
      gap: 20px;
    }

    .gift-text {
      font-size: {{ section.settings.main_text_size | times: 0.8 }}px;
    }

    .gift-subtext {
      font-size: {{ section.settings.sub_text_size | times: 0.9 }}px;
    }
  }

        .gift-button {
        padding-left: 33px;
        padding-right: 33px;
        padding-bottom: 16px;
        padding-top: 16px;
        border-radius: 9px;
        background: #d5f365;
        border: none;
        font-family: inherit;
        text-align: center;
        cursor: pointer;
        transition: 0.4s;
        color: var(--cl)
        }

        .gift-button:hover {
        box-shadow: 7px 5px 56px -14px #C3D900;
        }

        .gift-button:active {
        transform: scale(0.97);
        box-shadow: 7px 5px 56px -10px #C3D900;
        }
  @media (max-width: 575px) {
    .discount-card {
      flex-direction: column;
    }

    .gift-first {
      width: 100%;
      height: 120px;
      border-radius: 15px 15px 0 0;
    }

    .gift-second {
      width: 100%;
      border-radius: 0 0 15px 15px;
      flex-direction: column;
      text-align: center;
      padding: 25px 20px;
      gap: 15px;
    }

    .gift-content {
      align-items: center;
      text-align: center;
    }

    .gift-text {
      font-size: {{ section.settings.main_text_size | times: 0.7 }}px;
    }

    .gift-subtext {
      font-size: {{ section.settings.sub_text_size | times: 0.8 }}px;
    }
  }
</style>
