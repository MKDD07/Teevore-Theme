<script>
  (function () {
    const initParallax = () => {
      document.querySelectorAll('[data-parallax-bg]').forEach((bg) => {
        const container = bg.closest('[data-parallax-speed]');
        const speed = parseFloat(container.dataset.parallaxSpeed) || -0.5;
        const handleScroll = () => {
          const rect = container.getBoundingClientRect();
          const scrolled = window.pageYOffset;
          const rate = scrolled * speed;
          if (rect.bottom >= 0 && rect.top <= window.innerHeight) {
            bg.style.transform = `translateY(${rate}px) scale(1.1)`;
          }
        };
        window.addEventListener('scroll', handleScroll, { passive: true });
        handleScroll();
      });
    };
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initParallax);
    } else {
      initParallax();
    }
  })();
</script>

