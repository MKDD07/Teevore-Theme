        .px-scroll-top .px-scroll-content{animation-name:scroll-left}
        .px-scroll-bottom .px-scroll-content{animation-name:scroll-right}
        @keyframes scroll-left{0%{transform:translateX(0)}100%{transform:translateX(-50%)}}
        @keyframes scroll-right{0%{transform:translateX(-50%)}100%{transform:translateX(0)}}
        .px-scroll-item{display:inline-flex;align-items:center;gap:{{bs.text_icon_gap}}px;font-size:{{bs.scroll_font_size}}px;color:{{bs.scroll_text_color}};font-weight:{{bs.scroll_font_weight}};margin-right:{{bs.item_spacing}}px}
