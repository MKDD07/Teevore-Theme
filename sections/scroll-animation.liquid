{%- capture sec_cov -%}
{% assign section_st = section.settings %}
<div class="sec_cov{% if section_st.hidem %} hide-sm{% endif %}{% if section_st.hided %} hide-md hide-lg{% endif %}{% if section_st.ganim %} gr_bg{% endif %}{% if section_st.bgimg != blank %} bgImg lazyload zi1{% endif %}" 
  style="--sbg:{% if section_st.bgg != blank %}{{ section_st.bgg }}{% else %}{{ section_st.bg }}{% endif %};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--as:{{ section_st.animsp }}s;--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};"
  {% if section_st.bgimg != blank %}data-bgset="{{ section_st.bgimg | image_url: width: section_st.bgimg.width | image_tag: widths: '400,600,800,1000,1400,1600,2000,2400,3000' | split: 'srcset="' | last | split: '"' | first }}" data-sizes="auto" data-parent-fit="contain"{% endif %}>
  
  <div class="{% if section_st.sw %}fw-sec{% else %}page-width{% endif %}{% unless section_st.lefta %} tc{% endunless %}">
    {% if section_st.image != blank %}
      {{ section_st.image | image_url: width:section_st.image.width | image_tag: loading:'lazy', class:'imgAt', widths:"180,320,400,560,740,900,1200,1600,2000" }}
    {%- endif -%}
     <div class="richtext m_auto w_100 {% render 'animate-data', css:true %}"
      {% render 'animate-data' %} 
      style="max-width: {{ section_st.maxwd }}%;">
      
      <div class="richtext-container">
        <div class="richtext-column pd20">
          {% for block in section.blocks %}
            {% assign blk_st = block.settings %}
            {% if blk_st.column_placement == '1' or blk_st.column_placement == blank %}
              {% case block.type %}
                
                {% when 'heading' %}
                  <div class="rgTxt {{ blk_st.tff }}" {{ block.shopify_attributes }} 
                    style="--cl:{{ blk_st.cl }};--fs:{{ blk_st.fs }}px;--fsm:{{ blk_st.fsm }}px;--fw:{{ blk_st.fw }};--lh:{{ blk_st.lh }};--mb:{{ blk_st.mb }}px;">
                    {{ blk_st.heading }}
                  </div>
                  
                {% when 'subheading' %}
                  <div class="rgTxt {{ blk_st.tff }}" {{ block.shopify_attributes }} 
                    style="--cl:{{ blk_st.cl }};--fs:{{ blk_st.fs }}px;--fsm:{{ blk_st.fsm }}px;--fw:{{ blk_st.fw }};--lh:{{ blk_st.lh }};--mb:{{ blk_st.mb }}px;">
                    {{ blk_st.subheading }}
                  </div>
                  
                {% when 'text' %}
                  <div class="rgTxt mauto {{ blk_st.tff }}" {{ block.shopify_attributes }} 
                    style="--cl:{{ blk_st.cl }};--fs:{{ blk_st.fs }}px;--fsm:{{ blk_st.fsm }}px;--fw:{{ blk_st.fw }};--lh:{{ blk_st.lh }};--mb:{{ blk_st.mb }}px; max-width: 1024px;">
                    {{ blk_st.text }}
                  </div>
                  
                {% when 'button' %}
                  <div class="btn-container" {{ block.shopify_attributes }}>
                    {% if blk_st.btntxt != blank %}
                      <a class="btn {{ blk_st.btn_size }} {{ blk_st.btn_style }}" 
                         {% if blk_st.newtab %}target="_blank"{% endif %} 
                         href="{{ blk_st.url | default: '#' }}">
                        {{ blk_st.btntxt }}
                      </a>
                    {% endif %}
                  </div>

                {% when 'image' %}
                  <div class="image-container floating-animation" {{ block.shopify_attributes }} 
                    style="--mb:{{ blk_st.mb }}px;--img-width:{{ blk_st.img_width }}%;--img-align:{{ blk_st.img_align }}; margin: 0 auto; mix-blend-mode: darken;">
                    {% if blk_st.image != blank %}
                      {% if blk_st.link != blank %}
                        <a href="{{ blk_st.link }}" {% if blk_st.newtab %}target="_blank"{% endif %}>
                      {% endif %}
                      {{ blk_st.image | image_url: width: blk_st.image.width | image_tag: 
                        loading: 'lazy', 
                        class: 'block-image', 
                        widths: '180,320,400,560,740,900,1200,1600,2000',
                        alt: blk_st.alt_text | default: blk_st.image.alt }}
                      {% if blk_st.link != blank %}
                        </a>
                      {% endif %}
                    {% endif %}
                  </div>
                  
              {% endcase %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{%- endcapture -%}
{{ sec_cov | strip_newlines | remove: '  ' | remove: '	' }}
{% style %}
  .floating-animation {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  .richtext em,
  .richtext i {
    {% if section_st.italic_outline %}
      -webkit-text-stroke: 1px currentColor;
      -webkit-text-fill-color: transparent;
      font-style: normal;
    {% endif %}
  }
  .image-container {
    margin-bottom: var(--mb, 20px);
    text-align: var(--img-align, center);
  }
.image-container {
  width: 100%;
}

@media (min-width: 1024px) {
  .image-container {
    width: 50%;
  }
}

  .block-image {
    max-width: 100%;
    height: auto;
    display: inline-block;
  }
{% endstyle %}}

