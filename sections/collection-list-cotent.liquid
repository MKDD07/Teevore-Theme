{% comment %}
  Enhanced Collections Display Section - List Layout with Hover Effects
{% endcomment %}

{%- liquid
  assign collections_to_show = section.settings.collections_to_show | default: 6
  assign section_id = section.id
-%}

<section class="collections-display" id="section-{{ section_id }}">
  <div class="container">
    {% comment %} Section Header {% endcomment %}
    {% if section.settings.title != blank %}
      <div class="section-header">
        <h2 class="section-heading">{{ section.settings.title }}</h2>
        {% if section.settings.subtitle != blank %}
          <div class="section-subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% comment %} Collections List {% endcomment %}
    <div class="collections-list">
      {% for block in section.blocks limit: collections_to_show %}
        {% if block.settings.collection != blank %}
          {% assign collection = collections[block.settings.collection] %}
          <div 
            class="collection-item" 
            data-background-image="{% if block.settings.custom_background %}{{ block.settings.custom_background | image_url: width: 1200 }}{% endif %}"
            {{ block.shopify_attributes }}
          >
            <div class="collection-card">
              {% comment %} Collection Image {% endcomment %}
              {% if collection.featured_image or block.settings.custom_image %}
                <div class="collection-image">
                  {% if block.settings.custom_image != blank %}
                    <img
                      src="{{ block.settings.custom_image | image_url: width: 300 }}"
                      alt="{{ collection.title | escape }}"
                      loading="lazy"
                      width="300"
                      height="200"
                    >
                  {% else %}
                    <img
                      src="{{ collection.featured_image | image_url: width: 300 }}"
                      alt="{{ collection.title | escape }}"
                      loading="lazy"
                      width="300"
                      height="200"
                    >
                  {% endif %}
                </div>
              {% endif %}

              {% comment %} Collection Content {% endcomment %}
              <div class="collection-content">
                <div class="collection-heading">
                  {% if block.settings.heading != blank %}
                    <h3>{{ block.settings.heading }}</h3>
                  {% else %}
                    <h3>{{ collection.title }}</h3>
                  {% endif %}
                </div>

                {% if block.settings.show_description and collection.description != blank %}
                  <div class="collection-description">
                    {{ collection.description | strip_html | truncatewords: 20 }}
                  </div>
                {% endif %}

                {% if block.settings.show_product_count %}
                  <div class="collection-product-count">
                    {{ collection.products_count }} 
                    {% if collection.products_count == 1 %}product{% else %}products{% endif %}
                  </div>
                {% endif %}
              </div>

              {% comment %} Arrow Animation {% endcomment %}
              <div class="collection-arrow">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="https://www.w3.org/2000/svg">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>

              {% comment %} Collection Link {% endcomment %}
              <a
                href="{{ collection.url }}"
                class="collection-link"
                aria-label="View {{ collection.title }} collection"
              ></a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .collections-display {
    padding: {{ section.settings.padding_top | default: 60 }}px 0 {{ section.settings.padding_bottom | default: 60 }}px 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-header {
    text-align: {{ section.settings.text_alignment | default: 'left' }};
    margin-bottom: 50px;
  }

  .section-heading {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 15px;
    color: {{ section.settings.heading_color | default: '#333' }};
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: {{ section.settings.subtitle_color | default: '#666' }};
    line-height: 1.5;
  }

  /* Collections List */
  .collections-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .collection-item {
    border-bottom: 1px solid #f0f0f0;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
  }

  .collection-item:last-child {
    border-bottom: none;
  }

  /* Background Image Hover Effect */
  .collection-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
  }

  .collection-item:hover::before {
    opacity: 0.1;
  }

  .collection-card {
    display: flex;
    align-items: center;
    padding: 30px 0;
    position: relative;
    z-index: 1;
    transition: all 0.4s ease;
  }

  .collection-item:hover .collection-card {
    padding-left: 20px;
  }

  .collection-image {
    flex-shrink: 0;
    width: 200px;
    height: 200px;
    border-radius: 8px;
    overflow: hidden;
    margin-right: 30px;
  }

  .collection-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .collection-item:hover .collection-image img {
    transform: scale(1.05);
  }

  .collection-content {
    flex: 1;
    padding-right: 20px;
  }

  .collection-heading {
    position: relative;
    display: inline-block;
    margin-bottom: 15px;
  }

  .collection-heading h3 {
    font-size: 1.8rem;
    font-weight: 500;
    margin: 0;
    color: #333;
    transition: color 0.3s ease;
  }

  .collection-heading::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #333;
    transition: width 0.3s ease;
  }

  .collection-item:hover .collection-heading::after {
    width: 100%;
  }

  .collection-description {
    font-size: 1rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 10px;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease 0.1s;
  }

  .collection-item:hover .collection-description {
    opacity: 1;
    transform: translateY(0);
  }

  .collection-product-count {
    font-size: 0.9rem;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease 0.2s;
  }

  .collection-item:hover .collection-product-count {
    opacity: 1;
    transform: translateY(0);
  }

  /* Arrow Animation */
  .collection-arrow {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #ddd;
    border-radius: 50%;
    transition: all 0.3s ease;
    color: #666;
  }

  .collection-item:hover .collection-arrow {
    background-color: #333;
    border-color: #333;
    color: white;
    transform: translateX(10px);
  }

  .collection-arrow svg {
    transition: transform 0.3s ease;
  }

  .collection-item:hover .collection-arrow svg {
    transform: translateX(2px);
  }

  .collection-link {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .collections-display {
      padding: 40px 0;
    }

    .container {
      padding: 0 15px;
    }

    .section-header {
      margin-bottom: 35px;
    }

    .section-heading {
      font-size: 2rem;
    }

    .collection-card {
      flex-direction: column;
      align-items: flex-start;
      padding: 25px 0;
    }

    .collection-image {
      width: 100%;
      height: 200px;
      margin-right: 0;
      margin-bottom: 20px;
    }

    .collection-content {
      padding-right: 0;
      margin-bottom: 20px;
    }

    .collection-heading h3 {
      font-size: 1.5rem;
    }

    .collection-arrow {
      align-self: flex-end;
    }

    .collection-item:hover .collection-card {
      padding-left: 0;
    }
  }

  @media (max-width: 480px) {
    .section-heading {
      font-size: 1.8rem;
    }

    .collection-heading h3 {
      font-size: 1.3rem;
    }

    .collection-description {
      font-size: 0.95rem;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const collectionItems = document.querySelectorAll('.collection-item');
  
  collectionItems.forEach(item => {
    const backgroundImage = item.dataset.backgroundImage;
    
    if (backgroundImage) {
      // Set background image for hover effect
      item.addEventListener('mouseenter', function() {
        this.style.setProperty('--bg-image', `url(${backgroundImage})`);
        this.style.backgroundImage = 'var(--bg-image)';
      });
      
      item.addEventListener('mouseleave', function() {
        this.style.backgroundImage = 'none';
      });
    }
  });
  
  // Enhanced hover animations
  collectionItems.forEach((item, index) => {
    item.addEventListener('mouseenter', function() {
      // Add stagger effect for multiple items
      this.style.transitionDelay = `${index * 0.05}s`;
    });
    
    item.addEventListener('mouseleave', function() {
      this.style.transitionDelay = '0s';
    });
  });
});
</script>

