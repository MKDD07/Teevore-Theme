{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}
{% assign section_st = section.settings %}
{% style %}
  .ai-text-mask-{{ ai_gen_id }} {
    position: relative;
    margin-top: {{ section_st.margin_top }}px;
    margin-bottom: {{ section_st.margin_bottom }}px;
    text-align: {{ section_st.text_align }};
    background-color: {{ section_st.background_color }};
    padding: {{ section_st.content_padding }}px;
    min-height: {{ section_st.min_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-text-mask-heading-{{ ai_gen_id }} {
    font-weight: {{ section_st.heading_weight }};
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    background-size: cover;
    background-position: center;
    text-shadow: none;
    display: inline-block;
  }

  .ai-text-mask-heading-{{ ai_gen_id }}-outline {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    color: {{ section_st.text_outline_color }};
    -webkit-text-stroke: {{ section_st.text_outline_width }}px {{ section_st.text_outline_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-text-mask-{{ ai_gen_id }} {
      margin-top: {{ section_st.margin_top | times: 0.7 }}px;
      margin-bottom: {{ section_st.margin_bottom | times: 0.7 }}px;
      padding: {{ section_st.content_padding | times: 0.7 }}px;
      min-height: {{ section_st.min_height | times: 0.8 }}px;
    }

    .ai-text-mask-heading-{{ ai_gen_id }} {
      font-size: {{ section_st.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-text-mask-{{ ai_gen_id }} fl f-col fw-sec tc">
      <{{section_st.heading_tag}}
        class="kug ai-text-mask-heading-{{ ai_gen_id }}"
        style="background-image: url('{{ section_st.mask_image | image_url: width: 2000 }}');"
      >
        {{ section_st.heading_text }}
        {% if section_st.show_text_outline %}
          <span class="ai-text-mask-heading-{{ ai_gen_id }}-outline">{{ section_st.heading_text }}</span>
        {% endif %}
      </{{section_st.heading_tag}}>
      <p>{{ section_st.paragraph }}</p>
</div>

