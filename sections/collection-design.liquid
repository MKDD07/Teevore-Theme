                <div class="cco">
                  {{ collection.products_count }}
                  {% if collection.products_count == 1 %}item{% else %}items{% endif %}
                </div>
              {% endif %}
              {% if section_st.enable_title %}
                <h3 class="cti">{{ collection.title }}</h3>
              {% endif %}
              
              {% if section_st.enable_subtitle and block.settings.custom_title != blank %}
                <div class="csu">{{ block.settings.custom_title }}</div>
              {% endif %}
              
              {% if section_st.enable_description %}
                {% if block.settings.description != blank %}
                  <p class="cde">{{ block.settings.description }}</p>
                {% elsif collection.description != blank %}
                  <p class="cde">{{ collection.description | strip_html }}</p>
                {% endif %}
              {% endif %}
              
              {% if section_st.enable_count and section_st.count_position == 'inline' %}
