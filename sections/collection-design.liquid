{%- assign section_st = section.settings -%}

<style>
  .cse {
    padding: {{ section_st.padding_top }}px 0 {{ section_st.padding_bottom }}px;
    background: {{ section_st.bg_color }};
  }
  
  .cc {
    max-width: {{ section_st.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .cl {
    display: flex;
    flex-direction: column;
    gap: {{ section_st.item_spacing }}px;
    {% if section_st.enable_sticky %}
    position: relative;
    {% endif %}

  }
  
.ci {
  overflow: hidden;
  border-radius: {{ section_st.border_radius }}px;
  padding: {{ section_st.item_padding }}px;
  transition: all .3s cubic-bezier(0,0,.5,1);
  cursor: pointer;

  {% if section_st.enable_sticky %}
  position: sticky;
  top: calc({{ forloop.index0 | times: 20 }}px + {{ section_st.sticky_offset }}px);
  z-index: {{ 100 | minus: forloop.index0 }};
  {% endif %}

  {% if section_st.layout_type == 'horizontal' %}
  display: flex;
  align-items: center;
  {% else %}
  display: flex;
  flex-direction: column;
  text-align: center;
  {% endif %}

  /* Dynamic height based on total blocks */
  height: calc(100% / {{ section.blocks.size }});
}

  
  .ci:hover {
    box-shadow: 2px 4px 16px #00000014;
  }
  .cim{
  min-height:180px;}
 
  .cim img {
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
    
  .ccn {
    {% if section_st.layout_type == 'horizontal' %}
    flex: 1;
    {% else %}
    width: 100%;
    {% endif %}
    position: relative;
    max-width:400px;
    height: 100%;
    align-content: center;
  }
  
  .cti {
    font-size: clamp(16px, 2vw, 28px);
    font-weight: {{ section_st.title_weight }};
    color: {{ section_st.title_color }};
    margin: 0 0 {{ section_st.title_margin }}px;
    line-height: 1.3;
    {% if section_st.enable_title == false %}
    display: none;
    {% endif %}
    font-family: {{ settings.font_face_family_sec }}
  }
  
  .csu {
    font-size: {{ section_st.subtitle_size }}px;
    color: {{ section_st.subtitle_color }};
    font-weight: {{ section_st.subtitle_weight }};
    margin: 0 0 {{ section_st.subtitle_margin }}px;
    {% if section_st.enable_subtitle == false %}
    display: none;
    {% endif %}
  }
  
  .cde {
    margin: 0;
    {% if section_st.enable_description == false %}
    display: none;
    {% endif %}
    {% if section_st.desc_lines > 0 %}
    display: -webkit-box;
    -webkit-line-clamp: {{ section_st.desc_lines }};
    -webkit-box-orient: vertical;
    overflow: hidden;
    {% endif %}
  }
  
  .cco {
    font-size: {{ section_st.count_size }}px;
    color: {{ section_st.count_color }};
    font-weight: {{ section_st.count_weight }};
    {% if section_st.count_position == 'badge' %}
    position: absolute;
    top: {{ section_st.count_top }}px;
    right: {{ section_st.count_right }}px;
    background: {{ section_st.count_bg }};
    padding: {{ section_st.count_padding }}px;
    border-radius: {{ section_st.count_border_radius }}px;
    {% else %}
    margin-top: {{ section_st.count_margin }}px;
    {% endif %}
    {% if section_st.enable_count == false %}
    display: none;
    {% endif %}
  }
  
  .carr {
    {% if section_st.enable_arrow %}
    {% if section_st.layout_type == 'horizontal' %}
    margin-left: auto;
    {% else %}
    margin-top: auto;
    align-self: center;
    {% endif %}
    width: {{ section_st.arrow_size }}px;
    height: {{ section_st.arrow_size }}px;
    background: {{ section_st.arrow_bg }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    {% else %}
    display: none;
    {% endif %}
  }
  
  .carr svg {
    width: {{ section_st.arrow_icon_size }}px;
    height: {{ section_st.arrow_icon_size }}px;
    fill: {{ section_st.arrow_color }};
  }
  
  .shea {
    text-align: {{ section_st.header_align }};
    margin-bottom: {{ section_st.header_margin }}px;
    {% if section_st.enable_header == false %}
    display: none;
    {% endif %}
  }
  
  .sht {
    font-size: {{ section_st.section_title_size }}px;
    font-weight: {{ section_st.section_title_weight }};
    color: {{ section_st.section_title_color }};
    margin: 0 0 {{ section_st.section_title_margin }}px;
    line-height: 1.2;
  }
  
  .shs {
    font-size: {{ section_st.section_subtitle_size }}px;
    color: {{ section_st.section_subtitle_color }};
    margin: 0;
    line-height: 1.5;
    max-width: {{ section_st.subtitle_width }}px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .cgr {
    display: grid;
    grid-template-columns: repeat({{ section_st.columns_desktop }}, 1fr);
    gap: {{ section_st.grid_gap }}px;
  }
  
  .cgr .ci {
    {% if section_st.enable_sticky %}
    position: static;
    {% endif %}
  }
  
  @media (max-width: 768px) {
    .cc {
      padding: 0 16px;
    }
    
    .cgr {
      grid-template-columns: repeat({{ section_st.columns_mobile }}, 1fr);
    }
    
    .ci {
      {% if section_st.mobile_direction == 'vertical' %}
      flex-direction: column;
      text-align: center;
      {% endif %}
      padding: {{ section_st.mobile_padding }}px;
    }
    
    .cim {
      {% if section_st.mobile_direction == 'vertical' %}
      margin-right: 0;
      margin-bottom: {{ section_st.content_spacing }}px;
      {% endif %}
    }
  }
  .cispan img{object-position: top;}
  .lazy-zooms {
    transform: scale(1);
    transition: transform 0.6s ease-in-out;
    aspect-ratio: 1 / 1;
    object-fit: cover;
}
</style>

